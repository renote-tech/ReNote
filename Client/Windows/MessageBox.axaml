<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="175"
        x:Class="Client.Windows.MessageBox"
        Title="Information" Width="400" Height="175" Background="{DynamicResource BaseBackground}"
		WindowStartupLocation="CenterOwner" CanResize="False">
	<Panel>
		<Image x:Name="m_IconImage" Width="64" Height="64" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="30, 0, 0, 20"/>
		<TextBlock x:Name="m_MessageLabel" Margin="105, 0, 0, 20" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="16"/>
	    <Button x:Name="m_ConfirmButton" Content="{DynamicResource DialogConfirm}" HorizontalContentAlignment="Center" VerticalAlignment="Bottom" FontSize="11" Margin="10" Width="75" Height="25" HorizontalAlignment="Right"/>
		<Button x:Name="m_CancelButton" Content="{DynamicResource DialogCancel}" HorizontalContentAlignment="Center" VerticalAlignment="Bottom" FontSize="11" Margin="10" Width="75" Height="25"/>
	</Panel>
</Window>
