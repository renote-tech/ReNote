<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="175"
        x:Class="Client.Windows.MessageBox"
        Title="Information" Width="400" Height="175" WindowStartupLocation="CenterScreen" CanResize="False" Closing="OnWindowClosing">
	<Panel>
		<Image x:Name="boxIcon" Source="/Assets/home_button.png" Width="64" Height="64" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="30, 0, 0, 20"/>
		<TextBlock x:Name="boxMessage" Text="Are you sure you want to log out &#x0a;from your account?" Margin="105, 0, 0, 20" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="16"/>
	    <Button x:Name="boxConfirm" Click="OnConfirmClicked" Tag="CONFIRM" Content="Yes" HorizontalAlignment="Right" HorizontalContentAlignment="Center" VerticalAlignment="Bottom" FontSize="11" Margin="10" Width="75" Height="25"/>
		<Button x:Name="boxCancel" Click="OnConfirmClicked"  Tag="CANCEL" Content="Cancel" HorizontalContentAlignment="Center" VerticalAlignment="Bottom" FontSize="11" Margin="10" Width="75" Height="25"/>
	</Panel>
</Window>
