<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="960" d:DesignHeight="540"
             x:Class="Client.Popups.PopupMessage">
	<Panel Background="#7f000000">
		<Border VerticalAlignment="Center" Margin="0, 30, 0, 0" HorizontalAlignment="Center" Background="#323232" Width="300" Height="125" CornerRadius="16">
			<Panel>
				<TextBlock x:Name="m_MessageLabel" Text="Bloop. Bloop Bloop Bloop. Bloop. Bloop. Bloop." TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16" Margin="20, 25"/>
				<Button x:Name="m_ConfirmButton" Content="OK" Width="65" HorizontalContentAlignment="Center" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="15"/>
			</Panel>
		</Border>
	</Panel>
</UserControl>
